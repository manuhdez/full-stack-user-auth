extends layout

block content
  include navbar
  .container
    .row
      each board in boards
        div(class="col s12 m6")
          div(class="card blue-grey darken-1")
            div(class="card-content white-text")
              span(class="card-title") #{board.title}
            .card-action
              a(href="/users/" + id + "/boards/" +board.id) Open board
      else
        h3 You have no boards

    .row
      p Add a new board below
      form(action="/users/" + id, method="post", class="col s12")
        div(class="input-field col s6")
          input(type="text", name="boardTitle", id="board-name")
          label(for="board-name") Board Name
        button(type="submit", name="action", class="btn waves-effect waves-light") Create

